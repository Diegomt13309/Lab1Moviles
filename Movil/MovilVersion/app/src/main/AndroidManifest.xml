<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.movilversion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_movilapo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_movilapo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Cursos.CursosActivity"
            android:label="@string/title_activity_cursos"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Carreras.CarrerasActivity"
            android:label="@string/title_activity_carreras"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Cursos.AddCursosActivity"
            android:label="@string/title_activity_cursos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Carreras.AddCarreraActivity"
            android:label="@string/title_activity_carreras"
            android:screenOrientation="portrait" />
        <activity
            android:name=".HomeAct.HomeActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>